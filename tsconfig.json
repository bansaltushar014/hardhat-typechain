{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["./src", "./test"],
    "esModuleInterop": true,
    "preserveSymlinks": true
  },
  // "files": [], // Any Buidler plugin's main .d.ts has to be added here
  "exclude": ["dist", "node_modules", "test/buidler-project/testdir"],
  "include": [
    "./test",
    "./src"    
  ],
}
